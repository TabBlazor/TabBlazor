<Checkbox @bind-Value="isChecked" Switch/>
<div class="mb-3">
    <i> Value is checked: @isChecked</i>
</div>

<Checkbox Label="This is a label" @bind-Value="isChecked1" Switch />
<div class="mb-3">
    <i> Value is checked: @isChecked1</i>
</div>

<Checkbox Label="I Have a description" Description="This is a description" @bind-Value="isChecked2" Switch />
<div class="mb-3">
    <i>Value is checked: @isChecked2</i>
</div>

<Checkbox Label="I'm disabled" Disabled Switch />

@code {
    private bool isChecked;
    private bool isChecked1 = true;
    private bool isChecked2;
}

